<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.eComm.view.ui.fragments.OtpScreenFragment">

        <include layout="@layout/toolbar_signup" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:text="Please enter the verification code sent "
            android:textColor="@color/col_black"
            android:textSize="@dimen/sp_15"

            />

        <LinearLayout
            android:id="@+id/lin_ed_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edOtp1"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp70"
                android:background="@drawable/otp_field"
                android:gravity="center"
                android:imeOptions="flagNavigateNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <requestFocus />

            <EditText
                android:id="@+id/editText_otp_2"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp70"
                android:layout_marginLeft="@dimen/dp15"
                android:background="@drawable/otp_field"
                android:focusable="true"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edOtp3"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp70"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp15"
                android:background="@drawable/otp_field"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/edOtp4"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp70"
                android:layout_marginLeft="@dimen/dp15"
                android:background="@drawable/otp_field"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textColor="@color/col_black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp50"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_recieved_your_code" />

            <View
                android:layout_width="@dimen/dp2"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_code"
                android:textColor="@color/color_blue"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</layout>